int main() {
    int i = 0;
    int sum = 0;
    int j = 1000;
    while (i <= j) {
        i = i + 1;
        j = j - 1;
        sum = sum + i + j;
        if (300 <= j && j <= 400) i = i + 1;
        else if (400 < j && j <= 500) i = i - 1;
        else if (500 < j && j <= 600) i = i - 2;
        else i = i + 2;
    }
}